doctype html
html(ng-app='hypeApp')
  head
    base(href="/")
    title= Hype
    link(href='/favicon.ico', rel='icon', type='image/x-icon')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/doodle.css')
    block header
  body(ng-controller='IndexController')
    #nav(scroll-collapse, ng-class="{collapse:boolChangeClass}")
       #left-nav
         img#menu(src='/images/menu.png', ng-click='showShelf = ! showShelf')
    div#shelf-wrapper(ng-class='{expanded:showShelf}', ng-click='showShelf = ! showShelf')
        ul#shelf
            li: a.menutitle(href='/')
                img#logo(src='/images/logo2.png')
            li: a(href='/memes')  
                img.icon(src='/images/menu-icons/mymemesblack.png')
                | My Memes
            li: a(href='/tv')
                img.icon(src='/images/menu-icons/mytvblack.png')
                | My TV
            li: a(href='/videos')
                img.icon(src='/images/menu-icons/myhypesblack.png')
                | My Hypes
    block content
    script(src="/socket.io/socket.io.js")
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-route.js')
    script(src='/javascripts/app.js')
    script(src='/javascripts/controllers/meme-controller.js')
    script(src='/javascripts/controllers/meme-list-controller.js')
    script(src='/javascripts/controllers/index-controller.js')
    script(src='/javascripts/controllers/video-list-controller.js')
    script(src='/javascripts/controllers/video-controller.js')
    script(src='/javascripts/controllers/doodle-controller.js')
    script(src='/javascripts/directives/scroll-directive.js')
    script(src='/javascripts/directives/video-directive.js')
    script(src='/javascripts/directives/doodle-directive.js')